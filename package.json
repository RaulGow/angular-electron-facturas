{
  "name": "angular-electron-facturas",
  "version": "0.0.1",
  "main": "electron/main.js",
  "description": "Aplicación de facturación con Angular y Electron",
  "author": "Raúl Martínez",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "electron:start": "concurrently \"ng serve\" \"wait-on http://localhost:4200 && electron .\"",
    "build": "ng build",
    "electron:build": "ng build --base-href ./ && electron-builder",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/cdk": "^21.1.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/material": "^21.1.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "better-sqlite3": "^12.6.2",
    "chart.js": "^4.5.1",
    "ng2-charts": "^8.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.5",
    "@angular/cli": "^21.0.5",
    "@angular/compiler-cli": "^21.0.0",
    "@electron/remote": "^2.1.3",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.miempresa.facturas",
    "productName": "Angular Electron Facturas",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/angular-electron-facturas/browser/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  }
}
