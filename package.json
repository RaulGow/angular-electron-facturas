{
  "name": "angular-electron-facturas",
  "version": "0.0.1",
  "main": "main.js",
  "description": "Aplicación de facturación con Angular y Electron",
  "author": "Raúl Martínez",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "electron:start": "concurrently \"ng serve\" \"wait-on http://localhost:4200 && electron .\"",
    "build": "ng build --base-href ./",
    "electron:build": "npm run build && electron-builder",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.10.1",
  "dependencies": {
    "@angular/cdk": "^21.1.5",
    "@angular/common": "^21.1.5",
    "@angular/compiler": "^21.1.5",
    "@angular/core": "^21.1.5",
    "@angular/forms": "^21.1.5",
    "@angular/material": "^21.1.5",
    "@angular/platform-browser": "^21.1.5",
    "@angular/router": "^21.1.5",
    "better-sqlite3": "^12.6.2",
    "chart.js": "^4.5.1",
    "ng2-charts": "^8.0.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.1.5",
    "@angular/cli": "^21.1.5",
    "@angular/compiler-cli": "^21.1.5",
    "@electron/remote": "^2.1.3",
    "concurrently": "^9.2.1",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "jsdom": "^28.1.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.miempresa.facturas",
    "productName": "AngularElectronFacturas",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "files": [
      "package.json",
      "main.js",
      "preload.js",
      "db-manager.js",
      {
        "from": "dist/angular-electron-facturas/browser",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  }
}